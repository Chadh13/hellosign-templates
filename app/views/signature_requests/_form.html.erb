  <br>

  <div class="field">
    <%= f.label "What is the recipient's Name?" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "What is the recipient's email?" %><br>
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Signature Request', class: 'btn btn-primary' %>
  </div>

  <br>
  <%= link_to 'Back', @template %>
<% end %>

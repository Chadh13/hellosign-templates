<div class='container fluid buttons'>

<br><br><br>

  <p id="notice"><%= notice %></p>

  <p>
    <strong>Template:</strong>
    <%= @signature_request.template.title %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @signature_request.email %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= @signature_request.name %>
  </p>

  <div class='buttons'>
    <%= link_to 'Preview & Send Signature Request', new_hellosign_path(@signature_request), class: 'btn btn-md btn-primary' %> |
    <%= link_to 'Edit', edit_user_template_signature_request_path(current_user, params[:template_id], @signature_request) %> |
    <%= link_to 'Back', user_template_signature_requests_path %>
  </div>

</div>
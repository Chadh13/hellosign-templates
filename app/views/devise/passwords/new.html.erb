<body class='blue_form'>
	<h1>Forgot your password?</h1>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'signup_form well col-md-4 col-md-offset-4', method: :post } ) do |f| %>
	  <%= devise_error_messages! %>

	  <div><%= f.label :email %><br />
	  <%= f.email_field :email, autofocus: true %></div>

	  <div><%= f.submit "Send me reset password instructions", class: 'btn btn-lg btn-primary' %></div><br>
	<% end %>

</body>